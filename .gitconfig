[user]
	email = yvhn.yvhn@gmail.com
	name = yvhn
[core]
	editor = vim
[push]
	default = matching
[diff]
	tool = vimdiff
[difftool]
    prompt = false
[alias]
    whois = "!sh -c 'git log -i -1 --pretty=\"format:%an <%ae>\n\" --author=\"$1\"' -"
    whatis = show -s --pretty='tformat:%h (%s, %ad)' --date=short
    co = checkout
    st = status
    sts = status -s
    lg = log --decorate --graph --oneline
    br = branch
    am = commit --amend --no-edit
[merge]
	tool = vim
[color]
  ui = auto
[color "branch"]
  current = blue
  local = yellow
  remote = green
[color "diff"]
  meta = blue
  frag = magenta
  old = red
  new = green
[color "status"]
  added = yellow
  changed = green
  untracked = red
